{
  "compilerOptions": {
    "target": "esnext", 
    "module": "esnext",
    "strict": true, 
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "app/*": ["*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"],
      "store/*": ["src/store/*"],
      "vue$": ["node_modules/vue/dist/vue.runtime.esm-bundler.js"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true, 
    "skipLibCheck": true
  },
  "exclude": ["dist", ".quasar", "node_modules"]
}
